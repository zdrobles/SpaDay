@{
}
@if (ViewBag.error != null)
{
    <p>@ViewBag.error</p>
}
<form method="post" action="/user">
    @if (ViewBag.error != null)
    {
        <label>Username: <input name="username" type="text" value="@ViewBag.user.Username"/></label>
    }
    else
    {
        <label>Username: <input name="username" type="text" /></label>
    }
    
    <label>Password: <input name="password" type="password" /></label>
    <label>Confirm Password: <input name="verify" type="password" /></label>
    @if (ViewBag.error != null)
    {
        <label>Email: <input name="email" type="text" value="@ViewBag.user.Email"/></label>
    }
    else
    {
        <label>Email: <input name="email" type="email" /></label>
    }
    
    <input type="submit" />
</form>